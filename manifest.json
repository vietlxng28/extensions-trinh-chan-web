{
    "name": "Trình Chặn Web Tập Trung",
    "version": "3.1",
    "manifest_version": 3,
    "description": "...",
    "permissions": [
        "declarativeNetRequest",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["trang_chan.html"],
            "matches": ["<all_urls>"]
        }
    ]
}